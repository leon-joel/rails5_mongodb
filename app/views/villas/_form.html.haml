= form_for @villa, |
           url: battle_villa_path(@battle.id, @villa.id) do |f|
  - if @villa.errors.any?
    #error_explanation
      %h2= "#{pluralize(@villa.errors.count, "error")} prohibited this battle from being saved:"
      %ul
        - @villa.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :no
    = f.text_field :no
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :comment
    = f.text_field :comment
  .actions
    = f.submit 'Save'
